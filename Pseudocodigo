			col := 6;

		else if letra == “G” then

			col := 7;

		else if letra == “H” then

			col := 8;

		else if letra == “I” then

			col := 9;

		else if letra == “J” then

			col := 10;

		while col < 1 OR col > 10;

		matriz[fil][col] := 1;

		x := 0;
		
		if matriz[8][3] != OR matriz[8][4] != OR matriz[8][5] then

			
			WRITE “   A  B  C  D  E  F  G  H  I  J”;

		for i := 0 to ROWS do
			
			for j := 0 to COLS do

				if j != 0 then
			
					WRITE matriz[i][j];

				else

					WRITE x;
			
					x := x + 1;
				endif

			endfor

		endfor

		WRITE “Has acertado”;
			

			else

			WRITE “   A  B  C  D  E  F  G  H  I  J”;

		for i := 0 to ROWS do
			
			for j := 0 to COLS do

