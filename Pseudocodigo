Function

	var

		INTEGER fil,col:=0,ROWS,COLS,x:=0,num1,f;
		ROWS := 10;
		COLS := 11;
		INTEGER i,j,matriz[ROWS][COLS],matriz2[fil][col];
		CHAR letra;

