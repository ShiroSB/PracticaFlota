WRITE “******Bienvenido******”;	

	do

		f := f + 1;

		WRITE “Escoge un nivel de dificultad: “;
		WRITE “1) Facil “;
		WRITE “2) Medio “;
		WRITE “3) Se te cae “;
		WRITE “4) Salir “;

		READ num1;

while num1 < 1 OR num1 > 4 AND f != 3;

switch num1;

	case 1: 

WRITE “Has elegido facil”;

		WRITE “   A  B  C  D  E  F  G  H  I  J”;

		for i:=0 to ROWS do

			for j:=0 to COLS do

				matriz[i][j] := 0;

				if j !=0 then
				
					WRITE matriz[i][j];

				else
					
					WRITE x;
					x := x + 1;

				endif

			endfor

		endfor

		do
		
			WRITE “Dónde estás apuntando (fila)”;

			READ fil;

			while fil < 0 OR fil > 9;

